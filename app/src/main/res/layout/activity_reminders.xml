<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="20dp">

    <EditText
        android:id="@+id/editText_reminder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reminder Name"
        android:fontFamily="@font/uifontregular"/>

    <EditText
        android:id="@+id/editText_reminder_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reminder Time"
        android:fontFamily="@font/uifontregular"/>

    <Button
        android:id="@+id/button_set_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Reminder"
        android:fontFamily="@font/uifontbold"/>
</LinearLayout>
