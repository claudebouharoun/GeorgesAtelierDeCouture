<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.GeorgesAtelierDeCouture" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowSplashScreenBackground">@color/purple_500</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.GeorgesAtelierDeCouture.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowSplashScreenBackground">@color/purple_500</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>

</resources>
